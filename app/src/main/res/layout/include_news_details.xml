<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:showIn="@layout/activity_news_details"
    tools:context=".ui.news.news_details.NewsDetailsActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:padding="10sp"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <com.comaiu.daniyar.comalatoomobile.ui.custom_views.TextFontHeader
                    android:id="@+id/textViewName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@android:color/black"
                    android:textSize="24sp"
                    android:layout_margin="7sp"/>

                <TextView
                    android:id="@+id/textViewDate"
                    android:textSize="12sp"
                    android:gravity="end"
                    android:textColor="@color/colorGrey"
                    android:layout_marginTop="4sp"
                    android:layout_marginRight="4sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="4sp" />

                <ImageView
                    android:id="@+id/imageViewNews"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"/>

                <com.comaiu.daniyar.comalatoomobile.ui.custom_views.TextFontNormal
                    android:id="@+id/textViewDescription"
                    android:layout_marginTop="26sp"
                    android:layout_marginLeft="7sp"
                    android:layout_marginRight="7sp"
                    android:textColor="@android:color/black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </android.support.v7.widget.CardView>

    </LinearLayout>
</ScrollView>
